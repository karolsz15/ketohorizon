{
    "kind": "collectionType",
    "collectionName": "articles",
    "info": {
        "singularName": "article",
        "pluralName": "articles",
        "displayName": "Article"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "title",
            "required": true
        },
        "content": {
            "type": "richtext",
            "required": true
        },
        "excerpt": {
            "type": "string",
            "maxLength": 160
        },
        "language": {
            "type": "enumeration",
            "enum": [
                "en",
                "es",
                "hi",
                "zh"
            ]
        },
        "country": {
            "type": "enumeration",
            "enum": [
                "US",
                "ES",
                "IN",
                "CN"
            ]
        },
        "metaTitle": {
            "type": "string",
            "maxLength": 60
        },
        "metaDescription": {
            "type": "string",
            "maxLength": 160
        },
        "keywords": {
            "type": "string"
        },
        "canonicalUrl": {
            "type": "string"
        },
        "featuredImage": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images",
                "files",
                "videos",
                "audios"
            ]
        },
        "articleImages": {
            "type": "media",
            "multiple": true,
            "allowedTypes": [
                "images",
                "files",
                "videos",
                "audios"
            ]
        },
        "category": {
            "type": "enumeration",
            "enum": [
                "recipes",
                "guides",
                "reviews",
                "tips"
            ]
        },
        "tags": {
            "type": "string"
        },
        "readingTime": {
            "type": "integer"
        },
        "difficulty": {
            "type": "enumeration",
            "enum": [
                "beginner",
                "intermediate",
                "advanced"
            ]
        },
        "affiliateLinks": {
            "type": "json"
        },
        "publishedDate": {
            "type": "datetime"
        },
        "lastModified": {
            "type": "datetime"
        },
        "seoScore": {
            "type": "integer"
        }
    }
}
